<!DOCTYPE html>
<html>
<head>
	<title>Storby</title>
	<link rel="stylesheet" type="text/css" href="../css/storby.css">
	<script src="../js/jquery.min.js"></script>
	<script src="../js/jquery-ui.min.js"></script>
	<script> function SuggestedActive() {
		document.getElementById('suggested').style.backgroundColor=['#741Ba6']
		document.getElementById('suggested').style.color=['white']
		document.getElementById('recent').style.backgroundColor=['#ededed']
		document.getElementById('recent').style.color=['grey']
		document.getElementById('popular').style.backgroundColor=['#ededed']
		document.getElementById('popular').style.color=['grey']
	}</script>
	<script> function RecentActive() {
		document.getElementById('suggested').style.backgroundColor=['#ededed']
		document.getElementById('suggested').style.color=['grey']
		document.getElementById('recent').style.backgroundColor=['#741ba6']
		document.getElementById('recent').style.color=['white']
		document.getElementById('popular').style.backgroundColor=['#ededed']
		document.getElementById('popular').style.color=['grey']
	}</script>
	<script> function PopularActive() {
		document.getElementById('suggested').style.backgroundColor=['#ededed']
		document.getElementById('suggested').style.color=['grey']
		document.getElementById('recent').style.backgroundColor=['#ededed']
		document.getElementById('recent').style.color=['grey']
		document.getElementById('popular').style.backgroundColor=['#741Ba6']
		document.getElementById('popular').style.color=['white']
	}</script>
	<script> function displaySearchBar(){
		var a = document.getElementById('Sbar');
		if (a.style.display === "none") {
    	a.style.display = "block";
  		} else {
    	a.style.display = "none";
  		}
  		var b = document.getElementById('right-bar');
  		if (b.style.display === "flex") {
  		b.style.display = "none"
  		} else {
  		b.style.display = "flex"
  		}
  		var c = document.getElementById('logo');
  		if (c.style.display === "block") {
  		c.style.display = "none"
  		} else {
  		c.style.display = "block"
  		}
	}
		
	</script>
</head>
